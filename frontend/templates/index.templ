package templates

templ Index() {
	@Layout("n0ko") {
		<div class="container">
			<nav class="nav">
				<div class="logo">n0ko</div>
				<div class="nav-links">
					<a href="#about">About</a>
					<a href="#projects">Projects</a>
					<a href="#contact">Contact</a>
				</div>
			</nav>

			<main class="hero">
				<div class="hero-content">
					<h1 class="hero-title">
						<span class="gradient-text" data-text="n0ko">n0ko</span>
					</h1>
					<p class="hero-subtitle">
						Software Engineer & Builder
					</p>
					<p class="hero-description">
						Building modern systems with Go, cloud infrastructure, and observability.
					</p>
					<div class="hero-cta">
						<a href="#projects" class="btn btn-primary">View Projects</a>
						<a href="#contact" class="btn btn-secondary">Get in Touch</a>
					</div>
				</div>
				<div class="hero-visual">
					<div class="glow-orb"></div>
				</div>
			</main>

			<section id="about" class="section">
				<h2 class="section-title">About</h2>
				<div class="about-content">
					<p>
						Focused on building reliable, scalable backend systems and
						infrastructure. Passionate about observability, monitoring,
						and making complex systems understandable.
					</p>
				</div>
			</section>

			<section id="projects" class="section">
				<h2 class="section-title">Projects</h2>
				<div class="projects-grid">
					<a href="https://github.com/Nokodoko/rayne" class="project-card" target="_blank" rel="noopener">
						<div class="project-icon">◈</div>
						<h3>Rayne</h3>
						<p>Go-based REST API wrapping Datadog for monitoring demos and webhook automation.</p>
						<span class="project-github-link">github.com/Nokodoko/rayne</span>
						<div class="project-tags">
							<span class="tag">Go</span>
							<span class="tag">Datadog</span>
							<span class="tag">PostgreSQL</span>
						</div>
					</a>
					<a href="https://github.com/Nokodoko/messages_tui" class="project-card" target="_blank" rel="noopener">
						<div class="project-icon">◇</div>
						<h3>Messages TUI</h3>
						<p>Terminal UI for Google Messages with vim-like navigation, QR pairing, and external editor support.</p>
						<span class="project-github-link">github.com/Nokodoko/messages_tui</span>
						<div class="project-tags">
							<span class="tag">Go</span>
							<span class="tag">TUI</span>
							<span class="tag">Bubble Tea</span>
						</div>
					</a>
					<a href="https://github.com/Nokodoko/k8s_the_hard_way" class="project-card" target="_blank" rel="noopener">
						<div class="project-icon">⎈</div>
						<h3>K8s The Hard Way</h3>
						<p>Kubernetes cluster provisioned from scratch on AWS using Terraform, following Kelsey Hightower's guide.</p>
						<span class="project-github-link">github.com/Nokodoko/k8s_the_hard_way</span>
						<div class="project-tags">
							<span class="tag">Terraform</span>
							<span class="tag">AWS</span>
							<span class="tag">Kubernetes</span>
						</div>
					</a>
					<div class="project-card">
						<div class="project-icon">◆</div>
						<h3>Monty</h3>
						<p>Local AI agent powered by Ollama with persistent memory, tool-calling, and multi-model support.</p>
						<span class="project-github-link">Coming Soon - Private Repo</span>
						<div class="project-tags">
							<span class="tag">Python</span>
							<span class="tag">Ollama</span>
							<span class="tag">FastAPI</span>
						</div>
					</div>
				</div>
			</section>

			<section id="contact" class="section">
				<h2 class="section-title">Contact</h2>
				<div class="contact-content">
					<p>Interested in working together or just want to chat?</p>
					<div class="contact-links">
						<a href="https://github.com/Nokodoko" class="contact-link" target="_blank" rel="noopener">
							GitHub
						</a>
					</div>
				</div>
			</section>

			<footer class="footer">
				<p>&copy; 2026 n0ko</p>
			</footer>
		</div>

		@ChatWidget()
	}
}
