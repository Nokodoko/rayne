[Unit]
Description=Monty Chatbot Gateway (Ollama + llama3.2)
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=n0ko
WorkingDirectory=/home/n0ko/Portfolio/rayne/gateway
ExecStart=/home/n0ko/Portfolio/rayne/gateway/start-gateway.sh
Restart=on-failure
RestartSec=5
Environment=GATEWAY_PORT=8001
Environment=OLLAMA_HOST=http://localhost:11434
Environment=OLLAMA_MODEL=llama3.2:latest

[Install]
WantedBy=multi-user.target
